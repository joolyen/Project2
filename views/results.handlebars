<main></main>
  <div class="container">
    <h1 class="display-4 text-center">Results</h1>
    <div class="row">
      <div class="col-xl-6">
        <div class="card" id="movie-card">
          <ul class="list-group list-group-flush">
            {{#each movie}}

            <li>
              {{movie_title}}
              {{movie_overview}}
              {{movie_poster}}
              
            <button class="change-save btn btn-success" data-id="{{id}}" data-saved="{{save}}">
                Save 
            </button>
            </li>
            {{/each}}          
          </ul>
        </div>
      </div>

    </div>
  </div>
</main>